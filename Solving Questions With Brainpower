class Solution:
    def mostPoints(self, questions: List[List[int]]) -> int:
        size = len(questions)
        @cache
        def helper(pos):
            if pos >= size:
                return 0
            pick =questions[pos][0] + helper(pos + questions[pos][1] + 1)
            skip = helper(pos + 1)
            # print(pos, skip, pick)
            return max(skip, pick)
        return helper(0)
